<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/color_gradient_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="BaseTitleText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/assistant</item>
        <item name="android:textSize">@dimen/base_title_text_size</item>
        <item name="android:textColor">@color/color_gradient_blue</item>
    </style>

    <style name="BaseInputField" parent="ThemeOverlay.Design.TextInputEditText">
        <item name="android:fontFamily">@font/assistant</item>
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColorHint">@color/color_gradient_blue</item>
        <item name="android:textColor">@color/color_gradient_blue</item>
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:paddingStart">@dimen/base_margin</item>
        <item name="android:paddingEnd">@dimen/base_margin</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/assistant</item>
        <item name="android:background">@drawable/base_btn_bg</item>
        <item name="android:paddingTop">@dimen/x_large_margin</item>
        <item name="android:paddingBottom">@dimen/x_large_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/WhiteBigText</item>
    </style>

</resources>
